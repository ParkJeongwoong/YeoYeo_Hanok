{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "typeRoots": [
      "./src/types"
    ],
    "types": ["@types/gtag.js"],
    "incremental": true
  },
  "extends": "./tsconfig.paths.json",
  "include": [
    "src", "next-env.d.ts", "**/*.ts", "**/*.tsx", "additional.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
